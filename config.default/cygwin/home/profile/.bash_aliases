alias cls='clear'                                 # create cls command
alias df='df -h'                                  # default to human readable figures
alias grep='grep --color=auto'                    # show differences in colour
alias egrep='egrep --color=auto'                  # show differences in colour
alias fgrep='fgrep --color=auto'                  # show differences in colour

alias root="sudo su -"

# Some shortcuts for different directory listings
alias ls='ls -1AFhl --color=auto'                  # ls long listing of all files except . and .. with color, human readable
alias dir='ls -1AhFl --color=auto'                 # ls long listing of all files except . and .. with color, human readable

alias l='ls -1AFh --color=auto'                    # ls column listing of all files except . and .. with color, human readable
alias d='ls -1AFh --color=auto'                    # ls column listing of all files except . and .. with color, human readable

alias ll='ls -1ACFh --color=auto'                  # ls multi column listing of all files except . and .. with color
alias dd='ls -1ACFh --color=auto'                  # ls multi column listing of all files except . and .. with color